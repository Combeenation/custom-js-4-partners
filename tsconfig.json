{
  "extends": "@combeenation/ts-config",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es5", "scripthost", "es2018"],
    "checkJs": true,
    "outDir": "./dist",
    "strict": false,
    "downlevelIteration": true,
    "isolatedModules": false,
    "allowUmdGlobalAccess": true,
    "declaration": false
  },
  "include": ["./src/**/*"]
}
